{
  "scripts": {
    "format-yaml": "prettier --write '**/*.yml'  '**/*.yaml'",
    "format-yaml-check": "prettier --check  '**/*.yml'  '**/*.yaml'",
    "markdownlint": "markdownlint --dot .",
    "markdownlint-fix": "markdownlint --dot --fix .",
    "markdown-toc": "markdown-toc --bullets='-' -i"
  },
  "devDependencies": {
    "markdown-toc": "1.2.0",
    "markdownlint-cli": "0.39.0",
    "prettier": "3.2.5",
    "sigstore": "2.2.2"
  }
}
